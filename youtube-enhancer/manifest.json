{
  "manifest_version": 3,
  "name": "Enhanced YouTube Experience",
  "version": "0.6",
  "description": "Adds history clearing, UI improvements, and toggle controls",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": ["*://*.youtube.com/*"],

  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    },
    "default_popup": "popup.html"
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "content_scripts": [{
    "matches": ["*://*.youtube.com/*"],
    "js": ["content.js"],
    "css": ["styles.css"],
    "run_at": "document_end"
  }],

  "web_accessible_resources": [{
    "resources": ["icons/*.png"],
    "matches": ["*://*.youtube.com/*"]
  }]
}